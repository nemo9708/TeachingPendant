<!-- WaferMappingWindow.xaml -->
<Window x:Class="TeachingPendant.WaferMapping.WaferMappingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wafer Mapping System" Height="600" Width="800"
        WindowStartupLocation="CenterOwner"
        Background="LightGray">

    <Window.Resources>
        <!-- 웨이퍼 상태별 색상 스타일 -->
        <Style x:Key="EmptySlotStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGray"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="9"/>
        </Style>

        <Style x:Key="PresentSlotStyle" TargetType="Button">
            <Setter Property="Background" Value="LightGreen"/>
            <Setter Property="BorderBrush" Value="DarkGreen"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="CrossedSlotStyle" TargetType="Button">
            <Setter Property="Background" Value="Orange"/>
            <Setter Property="BorderBrush" Value="DarkOrange"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="9"/>
        </Style>

        <Style x:Key="DoubleSlotStyle" TargetType="Button">
            <Setter Property="Background" Value="Red"/>
            <Setter Property="BorderBrush" Value="DarkRed"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="9"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style x:Key="UnknownSlotStyle" TargetType="Button">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="Margin" Value="1"/>
            <Setter Property="FontSize" Value="9"/>
        </Style>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 제어 영역 -->
        <GroupBox Grid.Row="0" Header="Mapping Control" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="Group:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cmbGroup" Width="100" SelectedItem="Group1">
                        <ComboBoxItem>Group1</ComboBoxItem>
                        <ComboBoxItem>Group2</ComboBoxItem>
                        <ComboBoxItem>Group3</ComboBoxItem>
                    </ComboBox>
                </StackPanel>

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <TextBlock Text="Cassette:" VerticalAlignment="Center" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cmbCassette" Width="100"/>
                </StackPanel>

                <StackPanel Grid.Column="2" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button x:Name="btnStartMapping" Content="Start Mapping" Width="100" Height="30" Margin="5,0"/>
                    <Button x:Name="btnRefresh" Content="Refresh" Width="80" Height="30" Margin="5,0"/>
                </StackPanel>

                <Button Grid.Column="4" x:Name="btnClose" Content="Close" Width="80" Height="30"/>
            </Grid>
        </GroupBox>

        <!-- 매핑 상태 요약 -->
        <GroupBox Grid.Row="1" Header="Mapping Status" Margin="5">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0">
                    <TextBlock Text="Total Slots" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtTotalSlots" Text="25" HorizontalAlignment="Center" FontSize="18" Foreground="Blue"/>
                </StackPanel>

                <StackPanel Grid.Column="1">
                    <TextBlock Text="Occupied" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtOccupied" Text="0" HorizontalAlignment="Center" FontSize="18" Foreground="Green"/>
                </StackPanel>

                <StackPanel Grid.Column="2">
                    <TextBlock Text="Empty" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtEmpty" Text="0" HorizontalAlignment="Center" FontSize="18" Foreground="Gray"/>
                </StackPanel>

                <StackPanel Grid.Column="3">
                    <TextBlock Text="Error" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtError" Text="0" HorizontalAlignment="Center" FontSize="18" Foreground="Red"/>
                </StackPanel>

                <StackPanel Grid.Column="4">
                    <TextBlock Text="Last Mapping" HorizontalAlignment="Center" FontWeight="Bold"/>
                    <TextBlock x:Name="txtLastMapping" Text="Not mapped" HorizontalAlignment="Center" FontSize="10"/>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 카세트 슬롯 표시 영역 -->
        <GroupBox Grid.Row="2" Header="Cassette Slots (25 slots)" Margin="5">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
                <Grid x:Name="gridCassetteSlots" Margin="10">
                    <!-- 5x5 그리드로 25개 슬롯 표시 -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- 슬롯 버튼들은 코드에서 동적 생성 -->
                </Grid>
            </ScrollViewer>
        </GroupBox>

        <!-- 범례 -->
        <GroupBox Grid.Row="3" Header="Legend" Margin="5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Rectangle Width="20" Height="20" Fill="White" Stroke="Gray" Margin="0,0,5,0"/>
                    <TextBlock Text="Unknown" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Rectangle Width="20" Height="20" Fill="LightGray" Stroke="Black" Margin="0,0,5,0"/>
                    <TextBlock Text="Empty" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Rectangle Width="20" Height="20" Fill="LightGreen" Stroke="DarkGreen" Margin="0,0,5,0"/>
                    <TextBlock Text="Present" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Rectangle Width="20" Height="20" Fill="Orange" Stroke="DarkOrange" Margin="0,0,5,0"/>
                    <TextBlock Text="Crossed" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="10,0">
                    <Rectangle Width="20" Height="20" Fill="Red" Stroke="DarkRed" Margin="0,0,5,0"/>
                    <TextBlock Text="Double" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>