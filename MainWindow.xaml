<Window x:Class="TeachingPendant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeachingPendant"
        mc:Ignorable="d"
        Title="Robot Teaching Pendant" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 상단 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 메인 버튼 영역 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단 날짜/시간 -->
        </Grid.RowDefinitions>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="0" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="1">
                <Button Content="Main" Width="80" Height="25" BorderThickness="0" Background="LightGray" />
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="1">
                <TextBlock x:Name="txtAlarmMessage" Text="Alarm :" Padding="5,3,0,0"/>
            </Border>

            <!-- Manual/Auto/EMG 상태 표시 영역 -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="1">
                <StackPanel Orientation="Horizontal" Margin="3">
                    <RadioButton x:Name="rbManual" Content="M" 
                         GroupName="ModeGroup" 
                         IsChecked="True" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbManual_Click"/>
                    <RadioButton x:Name="rbAuto" Content="A" 
                         GroupName="ModeGroup" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbAuto_Click"/>
                    <RadioButton x:Name="rbEmg" Content="E" 
                         GroupName="ModeGroup" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbEmg_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 메인 버튼 영역 (3x3 그리드) -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 첫 번째 줄 -->
            <Button Grid.Row="0" Grid.Column="0" Content="Position and Speed" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Movement_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Monitor" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Monitor_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="System" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="System_Click"/>

            <!-- 두 번째 줄 -->
            <Button Grid.Row="1" Grid.Column="0" Content="Teaching" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Teaching_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Recipe Runner" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="RecipeRunner_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="Mapping" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Mapping_Click"/>

            <!-- 세 번째 줄 -->
            <Button Grid.Row="2" Grid.Column="0" Content="Setting" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Setting_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="Error Log" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="ErrorLog_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="HELP" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Help_Click"/>

            <!-- 네 번째 줄: LED/부저 테스트 버튼 추가 -->
            <Button Grid.Row="3" Grid.Column="0" Content="LED Blue" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Blue" BorderThickness="2"
        Click="LEDBlue_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="LED Red" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Red" BorderThickness="2"
        Click="LEDRed_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="LED All" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Purple" BorderThickness="2"
        Click="LEDAll_Click"/>

            <!-- 다섯 번째 줄: 부저 버튼 -->
            <Button Grid.Row="4" Grid.Column="0" Content="Buzzer Test" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Orange" BorderThickness="2"
        Click="Buzzer_Click"/>

            <Button Grid.Row="4" Grid.Column="1" Content="COM"
                Margin="5" FontSize="14" FontWeight="Bold"
                BorderBrush="Green" BorderThickness="2"
                Click="ComButton_Click"/>
        </Grid>

        <!-- 하단 영역 -->
        <Grid Grid.Row="2" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 날짜/시간 표시 -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="1">
                <TextBlock x:Name="txtDateTime" Text="yyyy / mm / dd 00:00:00" 
                           Padding="10,3" FontFamily="Consolas"/>
            </Border>

            <!-- 하단 버튼들 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnLogin" Content="Login" Width="70" Height="25" Margin="2"
                        BorderBrush="Blue" BorderThickness="2" Background="LightBlue"
                        Click="Login_Click"/>
                <Button Content="File Load" Width="70" Height="25" Margin="2"
                        BorderBrush="Gray" BorderThickness="1" Click="FileLoad_Click"/>
                <Button Content="Option" Width="70" Height="25" Margin="2"
                        BorderBrush="Gray" BorderThickness="1" Click="Option_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
