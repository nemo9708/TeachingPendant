<Window x:Class="TeachingPendant.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeachingPendant"
        mc:Ignorable="d"
        Title="Robot Teaching Pendant" Height="400" Width="600"
        WindowStartupLocation="CenterScreen"
        Background="LightGray">
    <Window.Resources>
        <Style TargetType="MenuItem">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <Trigger Property="IsHighlighted" Value="True">
                    <Setter Property="Background" Value="#3E3E42"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!--메뉴 바-->
            <RowDefinition Height="Auto"/>
            <!-- 상단 헤더 -->
            <RowDefinition Height="*"/>
            <!-- 메인 버튼 영역 -->
            <RowDefinition Height="Auto"/>
            <!-- 하단 날짜/시간 -->
        </Grid.RowDefinitions>

        <Menu Grid.Row="0" Background="#2D2D30" Foreground="#FFFFFF">
            <!-- 기존 File 메뉴 -->
            <MenuItem Header="파일">
                <MenuItem Header="새 레시피" Click="NewRecipe_Click"/>
                <MenuItem Header="레시피 열기" Click="OpenRecipe_Click"/>
                <MenuItem Header="레시피 저장" Click="SaveRecipe_Click"/>
                <Separator/>
                <MenuItem Header="종료" Click="Exit_Click"/>
            </MenuItem>

            <!-- 기존 Edit 메뉴 -->
            <MenuItem Header="편집">
                <MenuItem Header="실행 취소"/>
                <MenuItem Header="다시 실행"/>
                <Separator/>
                <MenuItem Header="복사"/>
                <MenuItem Header="붙여넣기"/>
            </MenuItem>

            <!-- 새로 추가된 Tools 메뉴 -->
            <MenuItem Header="도구">
                <MenuItem Header="로그 뷰어" Click="Menu_LogViewer_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="📋" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="시스템 설정" Click="Menu_SystemSettings_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="⚙️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="하드웨어 연결" Click="Menu_HardwareConnection_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🔌" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <MenuItem Header="진단 도구" Click="Menu_DiagnosticTools_Click">
                    <MenuItem.Icon>
                        <TextBlock Text="🔧" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
            </MenuItem>

            <!-- 기존 View 메뉴 -->
            <MenuItem Header="보기">
                <MenuItem Header="상태바" IsChecked="True"/>
                <MenuItem Header="도구모음" IsChecked="True"/>
                <Separator/>
                <MenuItem Header="전체화면"/>
            </MenuItem>

            <!-- 기존 Help 메뉴 -->
            <MenuItem Header="도움말">
                <MenuItem Header="사용자 가이드"/>
                <MenuItem Header="키보드 단축키">
                    <MenuItem.Icon>
                        <TextBlock Text="⌨️" FontSize="14"/>
                    </MenuItem.Icon>
                </MenuItem>
                <Separator/>
                <MenuItem Header="정보" Click="About_Click"/>
            </MenuItem>
        </Menu>

        <!-- 상단 헤더 영역 -->
        <Grid Grid.Row="1" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>


            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="1">
                <Button Content="Main" Width="80" Height="25" BorderThickness="0" Background="LightGray" />
            </Border>

            <Border Grid.Column="1" BorderBrush="Black" BorderThickness="1" Margin="1">
                <TextBlock x:Name="txtAlarmMessage" Text="Alarm :" Padding="5,3,0,0"/>
            </Border>

            <!-- Manual/Auto/EMG 상태 표시 영역 -->
            <Border Grid.Column="2" BorderBrush="Black" BorderThickness="1" Margin="1">
                <StackPanel Orientation="Horizontal" Margin="3">
                    <RadioButton x:Name="rbManual" Content="M" 
                         GroupName="ModeGroup" 
                         IsChecked="True" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbManual_Click"/>
                    <RadioButton x:Name="rbAuto" Content="A" 
                         GroupName="ModeGroup" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbAuto_Click"/>
                    <RadioButton x:Name="rbEmg" Content="E" 
                         GroupName="ModeGroup" 
                         Margin="2" 
                         VerticalAlignment="Center"
                         Click="rbEmg_Click"/>
                </StackPanel>
            </Border>
        </Grid>

        <!-- 메인 버튼 영역 (3x3 그리드) -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- 첫 번째 줄 -->
            <Button Grid.Row="0" Grid.Column="0" Content="Position and Speed" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Movement_Click"/>
            <Button Grid.Row="0" Grid.Column="1" Content="Monitor" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Monitor_Click"/>
            <Button Grid.Row="0" Grid.Column="2" Content="System" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="System_Click"/>

            <!-- 두 번째 줄 -->
            <Button Grid.Row="1" Grid.Column="0" Content="Teaching" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Teaching_Click"/>
            <Button Grid.Row="1" Grid.Column="1" Content="Recipe Runner" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="RecipeRunner_Click"/>
            <Button Grid.Row="1" Grid.Column="2" Content="Mapping" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Mapping_Click"/>

            <!-- 세 번째 줄 -->
            <Button Grid.Row="2" Grid.Column="0" Content="Setting" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Setting_Click"/>
            <Button Grid.Row="2" Grid.Column="1" Content="Error Log" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="ErrorLog_Click"/>
            <Button Grid.Row="2" Grid.Column="2" Content="HELP" 
                    Margin="5" FontSize="14" FontWeight="Bold"
                    BorderBrush="Gray" BorderThickness="2"
                    Click="Help_Click"/>

            <!-- 네 번째 줄: LED/부저 테스트 버튼 추가 -->
            <Button Grid.Row="3" Grid.Column="0" Content="LED Blue" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Blue" BorderThickness="2"
        Click="LEDBlue_Click"/>
            <Button Grid.Row="3" Grid.Column="1" Content="LED Red" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Red" BorderThickness="2"
        Click="LEDRed_Click"/>
            <Button Grid.Row="3" Grid.Column="2" Content="LED All" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Purple" BorderThickness="2"
        Click="LEDAll_Click"/>

            <!-- 다섯 번째 줄: 부저 버튼 -->
            <Button Grid.Row="4" Grid.Column="0" Content="Buzzer Test" 
        Margin="5" FontSize="14" FontWeight="Bold"
        BorderBrush="Orange" BorderThickness="2"
        Click="Buzzer_Click"/>

            <Button Grid.Row="4" Grid.Column="1" Content="COM"
                Margin="5" FontSize="14" FontWeight="Bold"
                BorderBrush="Green" BorderThickness="2"
                Click="ComButton_Click"/>
        </Grid>

        <!-- 하단 영역 -->
        <Grid Grid.Row="3" Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 날짜/시간 표시 -->
            <Border Grid.Column="0" BorderBrush="Black" BorderThickness="1" Margin="1">
                <TextBlock x:Name="txtDateTime" Text="yyyy / mm / dd 00:00:00" 
                           Padding="10,3" FontFamily="Consolas"/>
            </Border>

            <!-- 하단 버튼들 -->
            <StackPanel Grid.Column="2" Orientation="Horizontal">
                <Button x:Name="btnLogin" Content="Login" Width="70" Height="25" Margin="2"
                        BorderBrush="Blue" BorderThickness="2" Background="LightBlue"
                        Click="Login_Click"/>
                <Button Content="File Load" Width="70" Height="25" Margin="2"
                        BorderBrush="Gray" BorderThickness="1" Click="FileLoad_Click"/>
                <Button Content="Option" Width="70" Height="25" Margin="2"
                        BorderBrush="Gray" BorderThickness="1" Click="Option_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
