<Window x:Class="TeachingPendant.ErrorHandling.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="System Error" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F5F5"
        ShowInTaskbar="False"
        Topmost="True">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <Image x:Name="imgErrorIcon" Width="48" Height="48" Margin="0,0,15,0"/>
            <StackPanel VerticalAlignment="Center">
                <TextBlock x:Name="txtErrorTitle" 
                           Text="An Error Has Occurred" 
                           FontSize="18" 
                           FontWeight="Bold" 
                           Foreground="#D32F2F"/>
                <TextBlock x:Name="txtErrorTime" 
                           Text="2025-06-19 16:30:45" 
                           FontSize="12" 
                           Foreground="Gray" 
                           Margin="0,5,0,0"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" 
                Background="White" 
                BorderBrush="#E0E0E0" 
                BorderThickness="1" 
                CornerRadius="5" 
                Padding="15" 
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Problem Description:" FontWeight="Bold" Margin="0,0,0,10"/>
                <TextBlock x:Name="txtUserMessage" 
                           Text="A user-friendly error message will be displayed here." 
                           TextWrapping="Wrap"
                           LineHeight="22"/>

                <TextBlock Text="Recommended Action:" FontWeight="Bold" Margin="0,15,0,10"/>
                <TextBlock x:Name="txtSuggestedAction" 
                           Text="The recommended solution will be displayed here." 
                           TextWrapping="Wrap"
                           LineHeight="22"/>
            </StackPanel>
        </Border>

        <Expander Grid.Row="2" 
                  Header="Technical Details (for Developers)" 
                  IsExpanded="False"
                  Margin="0,0,0,15">
            <Border Background="#F9F9F9" 
                    BorderBrush="#E0E0E0" 
                    BorderThickness="1" 
                    Padding="10"
                    MaxHeight="150">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Error Type:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtExceptionType" 
                                   Text="System.Exception" 
                                   FontFamily="Consolas" 
                                   FontSize="11"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Technical Message:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtTechnicalMessage" 
                                   Text="The technical error message will be displayed here." 
                                   TextWrapping="Wrap"
                                   FontFamily="Consolas" 
                                   FontSize="11"
                                   Margin="0,0,0,10"/>

                        <TextBlock Text="Location:" FontWeight="Bold" Margin="0,0,0,5"/>
                        <TextBlock x:Name="txtLocation" 
                                   Text="Module.Method" 
                                   FontFamily="Consolas" 
                                   FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Expander>

        <StackPanel Grid.Row="3" Orientation="Horizontal" Margin="0,0,0,15">
            <CheckBox x:Name="chkSendReport" Content="Create Error Report" Margin="0,0,15,0"/>
            <CheckBox x:Name="chkOpenLogFolder" Content="Open Log Folder" Margin="0,0,15,0"/>
        </StackPanel>

        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="btnCopyDetails" 
                    Content="Copy Details" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Click="BtnCopyDetails_Click"/>

            <Button x:Name="btnRetry" 
                    Content="Retry" 
                    Width="100" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="BtnRetry_Click"/>

            <Button x:Name="btnIgnore" 
                    Content="Ignore and Continue" 
                    Width="120" 
                    Height="35" 
                    Margin="0,0,10,0"
                    Background="#FF9800"
                    Foreground="White"
                    Click="BtnIgnore_Click"/>

            <Button x:Name="btnClose" 
                    Content="Close Application" 
                    Width="140" 
                    Height="35" 
                    Background="#F44336"
                    Foreground="White"
                    Click="BtnClose_Click"/>
        </StackPanel>
    </Grid>
</Window>