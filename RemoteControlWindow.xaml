<Window x:Class="TeachingPendant.RemoteControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Remote Control" Height="350" Width="400"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize"
        Background="LightGray" BorderBrush="Black" BorderThickness="2">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="Remote Execution Control" 
                   FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" 
                   Margin="0,0,0,20" Foreground="DarkBlue"/>

        <!-- 제어 패널 -->
        <Border Grid.Row="1" BorderBrush="Gray" BorderThickness="2" 
                Background="White" Margin="0,0,0,15">
            <Grid Margin="20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>

                <!-- 헤더 -->
                <TextBlock Grid.Row="0" Grid.Column="0" Text="Menu" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Grid.Row="0" Grid.Column="1" Text="Status" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>
                <TextBlock Grid.Row="0" Grid.Column="2" Text="Control" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <!-- C Pick -->
                <TextBlock Grid.Row="1" Grid.Column="0" Text="C Pick :" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock x:Name="txtCPickStatus" Grid.Row="1" Grid.Column="1" Text="OFF" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Red"/>
                <Button x:Name="btnCPickControl" Grid.Row="1" Grid.Column="2" Content="ON" 
                        Width="60" Height="30" Margin="5" Click="CPickControl_Click"
                        Background="LightGreen" BorderBrush="Gray" BorderThickness="1"/>

                <!-- C Place -->
                <TextBlock Grid.Row="2" Grid.Column="0" Text="C Place :" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock x:Name="txtCPlaceStatus" Grid.Row="2" Grid.Column="1" Text="OFF" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Red"/>
                <Button x:Name="btnCPlaceControl" Grid.Row="2" Grid.Column="2" Content="ON" 
                        Width="60" Height="30" Margin="5" Click="CPlaceControl_Click"
                        Background="LightGreen" BorderBrush="Gray" BorderThickness="1"/>

                <!-- S Pick -->
                <TextBlock Grid.Row="3" Grid.Column="0" Text="S Pick :" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock x:Name="txtSPickStatus" Grid.Row="3" Grid.Column="1" Text="OFF" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Red"/>
                <Button x:Name="btnSPickControl" Grid.Row="3" Grid.Column="2" Content="ON" 
                        Width="60" Height="30" Margin="5" Click="SPickControl_Click"
                        Background="LightGreen" BorderBrush="Gray" BorderThickness="1"/>

                <!-- S Place -->
                <TextBlock Grid.Row="4" Grid.Column="0" Text="S Place :" 
                           VerticalAlignment="Center" Margin="0,5"/>
                <TextBlock x:Name="txtSPlaceStatus" Grid.Row="4" Grid.Column="1" Text="OFF" 
                           VerticalAlignment="Center" HorizontalAlignment="Center"
                           FontWeight="Bold" Foreground="Red"/>
                <Button x:Name="btnSPlaceControl" Grid.Row="4" Grid.Column="2" Content="ON" 
                        Width="60" Height="30" Margin="5" Click="SPlaceControl_Click"
                        Background="LightGreen" BorderBrush="Gray" BorderThickness="1"/>
            </Grid>
        </Border>

        <!-- 순차 실행 제어 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" 
                    Margin="0,0,0,15">
            <Button x:Name="btnStartSequence" Content="Start Sequence" Width="120" Height="35" 
                    Margin="0,0,10,0" Click="StartSequence_Click"
                    Background="LightBlue" BorderBrush="Gray" BorderThickness="1"
                    FontWeight="Bold"/>
            <Button x:Name="btnStopSequence" Content="Stop Sequence" Width="120" Height="35" 
                    Margin="10,0,0,0" Click="StopSequence_Click"
                    Background="LightPink" BorderBrush="Gray" BorderThickness="1"
                    FontWeight="Bold"/>
        </StackPanel>

        <!-- 닫기 버튼 -->
        <Button Grid.Row="3" Content="Close" Width="80" Height="30" 
                HorizontalAlignment="Center" Click="Close_Click"
                BorderBrush="Gray" BorderThickness="1" Background="LightGray"/>

        <!-- 숨겨진 Alarm 텍스트블록 -->
        <TextBlock x:Name="txtAlarmMessage" Visibility="Collapsed"/>
    </Grid>
</Window>