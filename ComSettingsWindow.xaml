<Window x:Class="TeachingPendant.Windows.ComPortSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="COM 포트 설정" Height="400" Width="500"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 상단 제목 -->
        <TextBlock Grid.Row="0" Text="Serial Communication" 
                   FontSize="16" FontWeight="Bold" 
                   Margin="0,0,0,20" HorizontalAlignment="Center"/>

        <!-- 설정 영역 -->
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- COM Port 선택 -->
            <TextBlock Grid.Row="0" Grid.Column="0" Text="COM Port" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="0" Grid.Column="1" Name="ComPortComboBox" 
                      Height="30" Margin="0,0,0,10"/>

            <!-- Baud Rate 선택 -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="Baud" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <ComboBox Grid.Row="1" Grid.Column="1" Name="BaudRateComboBox" 
                      Height="30" Margin="0,0,0,10">
                <ComboBoxItem Content="9600"/>
                <ComboBoxItem Content="115200" IsSelected="True"/>
            </ComboBox>

            <!-- 연결 모드 -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="Mode" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                <RadioButton Name="AutoRadioButton" Content="Auto" IsChecked="True" Margin="0,0,20,0"/>
                <RadioButton Name="ManualRadioButton" Content="Manual"/>
            </StackPanel>

            <!-- 연결 상태 -->
            <TextBlock Grid.Row="3" Grid.Column="0" Text="Status" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <TextBlock Grid.Row="3" Grid.Column="1" Name="StatusTextBlock" 
                       Text="연결 안됨" Foreground="Red" 
                       VerticalAlignment="Center" Margin="0,0,0,10"/>

            <!-- 연결/해제 버튼 -->
            <TextBlock Grid.Row="4" Grid.Column="0" Text="Control" 
                       VerticalAlignment="Center" Margin="0,0,10,10"/>
            <StackPanel Grid.Row="4" Grid.Column="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button Name="ConnectButton" Content="OPEN" Width="80" Height="30" 
                        Margin="0,0,10,0" Click="ConnectButton_Click"/>
                <Button Name="SaveButton" Content="SAVE" Width="80" Height="30" 
                        Click="SaveButton_Click"/>
            </StackPanel>

            <!-- 새로고침 버튼 -->
            <Button Grid.Row="5" Grid.Column="1" Name="RefreshButton" 
                    Content="포트 새로고침" Width="120" Height="30" 
                    HorizontalAlignment="Left" Click="RefreshButton_Click"/>
        </Grid>

        <!-- 하단 버튼 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Name="OkButton" Content="확인" Width="80" Height="30" 
                    Margin="0,0,10,0" Click="OkButton_Click"/>
            <Button Name="CancelButton" Content="취소" Width="80" Height="30" 
                    Click="CancelButton_Click"/>
        </StackPanel>
    </Grid>
</Window>