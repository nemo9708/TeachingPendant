<Window x:Class="TeachingPendant.VirtualKeyboard.VirtualKeyboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Virtual Keyboard" Height="300" Width="800"
        WindowStyle="None" 
        AllowsTransparency="True"
        Background="Transparent"
        Topmost="True"
        ShowInTaskbar="False">

    <Border Background="#F0F0F0" BorderBrush="#CCCCCC" BorderThickness="1" 
            CornerRadius="5" Margin="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <!-- 숫자 행 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="1" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="2" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="3" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="4" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="5" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="6" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="7" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="8" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="9" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="0" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="←" Width="80" Height="40" Margin="2" Click="BackspaceButton_Click" 
                        Background="#FFE6E6" FontWeight="Bold"/>
            </StackPanel>

            <!-- 첫 번째 문자 행 (QWERTY) -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Q" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="W" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="E" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="R" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="T" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="Y" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="U" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="I" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="O" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="P" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
            </StackPanel>

            <!-- 두 번째 문자 행 (ASDF) -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="A" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="S" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="D" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="F" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="G" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="H" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="J" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="K" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="L" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="Enter" Width="100" Height="40" Margin="2" Click="EnterButton_Click"
                        Background="#E6FFE6" FontWeight="Bold"/>
            </StackPanel>

            <!-- 세 번째 문자 행 (ZXCV) -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Name="ShiftButton" Content="Shift" Width="80" Height="40" Margin="2" 
                        Click="ShiftButton_Click" Background="#F0F0F0"/>
                <Button Content="Z" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="X" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="C" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="V" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="B" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="N" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="M" Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="," Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
                <Button Content="." Width="60" Height="40" Margin="2" Click="KeyButton_Click"/>
            </StackPanel>

            <!-- 스페이스바 및 기능키 -->
            <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="123" Width="80" Height="40" Margin="2" Click="NumberModeButton_Click"
                        Background="#F0F0F0"/>
                <Button Content="Space" Width="300" Height="40" Margin="2" Click="SpaceButton_Click"
                        Background="#E0E0E0"/>
                <Button Content="닫기" Width="80" Height="40" Margin="2" Click="CloseButton_Click"
                        Background="#FFE6E6" FontWeight="Bold"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>