<Window x:Class="TeachingPendant.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teaching Pendant - 로그인" Height="400" Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="LightGray">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="Robot Teaching Pendant" 
                   FontSize="18" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <TextBlock Grid.Row="1" Text="시스템 로그인" 
                   FontSize="14" 
                   HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <!-- 아이디 입력 -->
        <Grid Grid.Row="2" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="아이디:" 
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <TextBox Grid.Column="1" x:Name="txtUserId" 
                     Height="25" VerticalContentAlignment="Center"
                     FontSize="12" MaxLength="20"/>
        </Grid>

        <!-- 비밀번호 입력 -->
        <Grid Grid.Row="3" Margin="0,0,0,15">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="비밀번호:" 
                       VerticalAlignment="Center" FontWeight="Bold"/>
            <PasswordBox Grid.Column="1" x:Name="txtPassword" 
                         Height="25" VerticalContentAlignment="Center"
                         FontSize="12" MaxLength="20"/>
        </Grid>

        <!-- 현재 로그인 상태 표시 -->
        <Border Grid.Row="4" BorderBrush="DarkBlue" BorderThickness="1" 
                Background="LightBlue" Padding="10" Margin="0,0,0,10">
            <StackPanel>
                <TextBlock Text="현재 로그인 상태" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="사용자: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtCurrentUser" Text="로그인 안됨" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="권한: " FontWeight="Bold"/>
                    <TextBlock x:Name="txtCurrentRole" Text="-" />
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- 로그인 메시지 -->
        <TextBlock Grid.Row="5" x:Name="txtLoginMessage" Text="" 
                   HorizontalAlignment="Center" 
                   Foreground="Red" FontWeight="Bold"
                   Margin="0,0,0,10"/>

        <!-- 버튼 영역 -->
        <StackPanel Grid.Row="7" Orientation="Horizontal" 
                    HorizontalAlignment="Center">
            <Button x:Name="btnLogin" Content="로그인" 
                    Width="80" Height="30" Margin="0,0,10,80"
                    Background="LightGreen" BorderBrush="Green" BorderThickness="2"
                    Click="Login_Click"/>
            <Button x:Name="btnLogout" Content="로그아웃" 
                    Width="80" Height="30" Margin="0,0,10,80"
                    Background="LightPink" BorderBrush="Red" BorderThickness="2"
                    Click="Logout_Click"/>
            <Button x:Name="btnCancel" Content="닫기" 
                    Width="80" Height="30" Margin="0,0,10,80"
                    BorderBrush="Gray" BorderThickness="1"
                    Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>