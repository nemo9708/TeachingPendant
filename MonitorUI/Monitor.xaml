<UserControl x:Class="TeachingPendant.MonitorUI.Monitor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:TeachingPendant.MonitorUI"
             mc:Ignorable="d" 
             Background="LightGray"
             BorderBrush="Black" BorderThickness="1">

    <UserControl.Resources>
        <!-- Bool to Color Converter -->
        <local:BoolToColorConverter x:Key="BoolToColorConverter"/>
        <local:BoolToOnOffConverter x:Key="BoolToOnOffConverter"/>
    </UserControl.Resources>

    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 상단 좌측: 로봇 상태 모니터 -->
        <GroupBox Grid.Row="0" Grid.Column="0" Header="Robot Status" Margin="5" FontWeight="Bold">
            <Grid Margin="10">
                <StackPanel Margin="5" VerticalAlignment="Top">
                    <TextBlock Text="Current Position" FontWeight="Bold" FontSize="12" Margin="0,0,0,5"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="A(R): " Width="40"/>
                        <TextBlock x:Name="txtCurrentA" Text="0.00" FontWeight="Bold" Foreground="Blue" Width="60"/>
                        <TextBlock Text="mm" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="T(θ): " Width="40"/>
                        <TextBlock x:Name="txtCurrentT" Text="0.00" FontWeight="Bold" Foreground="Blue" Width="60"/>
                        <TextBlock Text="°" Margin="5,0,0,0"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Z: " Width="40"/>
                        <TextBlock x:Name="txtCurrentZ" Text="0.00" FontWeight="Bold" Foreground="Blue" Width="60"/>
                        <TextBlock Text="mm" Margin="5,0,0,0"/>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Speed: " Width="50"/>
                        <TextBlock x:Name="txtCurrentSpeed" Text="100%" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Status: " Width="50"/>
                        <TextBlock x:Name="txtRobotStatus" Text="READY" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 상단 우측: 시스템 상태 -->
        <GroupBox Grid.Row="0" Grid.Column="1" Header="System Status" Margin="5" FontWeight="Bold">
            <Grid Margin="10">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Mode: " Width="80"/>
                        <TextBlock x:Name="txtSystemMode" Text="MANUAL" FontWeight="Bold" Foreground="Blue"/>
                    </StackPanel>

                    <!-- 현재 구간 표시 -->
                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Current Section: " Width="90"/>
                        <TextBlock x:Name="txtCurrentSection" Text="Stopped" FontWeight="Bold" Foreground="DarkGreen"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Errors: " Width="80"/>
                        <TextBlock x:Name="txtErrorCount" Text="0" FontWeight="Bold" Foreground="Green"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Warnings: " Width="80"/>
                        <TextBlock x:Name="txtWarningCount" Text="0" FontWeight="Bold" Foreground="Orange"/>
                    </StackPanel>

                    <Separator Margin="0,10"/>

                    <StackPanel Orientation="Horizontal" Margin="0,2">
                        <TextBlock Text="Uptime: " Width="80"/>
                        <TextBlock x:Name="txtUptime" Text="00:00:00" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </GroupBox>

        <!-- 하단: I/O 상태 및 제어 -->
        <GroupBox Grid.Row="1" Grid.ColumnSpan="2" Header="I/O Status and Control" Margin="5" FontWeight="Bold">
            <Grid Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- 입력 신호 모니터링 -->
                <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="0,0,5,0">
                    <StackPanel Margin="5">
                        <TextBlock Text="Digital Input" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="InputSignalList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="2">
                                            <StackPanel Orientation="Horizontal">
                                                <Ellipse Width="12" Height="12" 
                                                         Fill="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}" 
                                                         Margin="0,0,8,0"/>
                                                <TextBlock Text="{Binding Name}" Width="35" FontFamily="Consolas"/>
                                                <TextBlock Text="{Binding Description}" FontSize="10"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>

                <!-- 출력 신호 제어 -->
                <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Margin="5,0,0,0">
                    <StackPanel Margin="5">
                        <TextBlock Text="Digital Output" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                        <ScrollViewer MaxHeight="150" VerticalScrollBarVisibility="Auto">
                            <ItemsControl x:Name="OutputSignalList">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="LightGray" BorderThickness="0,0,0,1" Padding="2">
                                            <StackPanel Orientation="Horizontal">
                                                <Button Width="40" Height="20" 
                                                        Content="{Binding IsActive, Converter={StaticResource BoolToOnOffConverter}}"
                                                        Background="{Binding IsActive, Converter={StaticResource BoolToColorConverter}}"
                                                        Click="OutputButton_Click"
                                                        Tag="{Binding}"
                                                        FontSize="9"/>
                                                <TextBlock Text="{Binding Name}" Width="35" FontFamily="Consolas" 
                                                           VerticalAlignment="Center" Margin="5,0"/>
                                                <TextBlock Text="{Binding Description}" VerticalAlignment="Center" FontSize="10"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </StackPanel>
                </Border>
            </Grid>
        </GroupBox>

        <!-- 숨겨진 Alarm 텍스트블록 -->
        <TextBlock x:Name="txtAlarmMessage" Visibility="Collapsed"/>
    </Grid>
</UserControl>
