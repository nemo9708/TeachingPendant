<UserControl x:Class="TeachingPendant.UI.Views.ErrorLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <UserControl.Resources>
        <!-- 툴바 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="28"/>
            <Setter Property="Margin" Value="5,0"/>
            <Setter Property="Padding" Value="10,3"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Opacity" Value="0.8"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 콤보박스 스타일 -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Height" Value="24"/>
            <Setter Property="Width" Value="120"/>
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <ToggleButton x:Name="ToggleButton"
                                        Background="{TemplateBinding Background}"
                                        BorderBrush="{TemplateBinding BorderBrush}"
                                        BorderThickness="1"
                                        Foreground="{TemplateBinding Foreground}"
                                        IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                        ClickMode="Press">
                                <ToggleButton.Template>
                                    <ControlTemplate TargetType="ToggleButton">
                                        <Border Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition/>
                                                    <ColumnDefinition Width="20"/>
                                                </Grid.ColumnDefinitions>
                                                <ContentPresenter Grid.Column="0"
                                                                HorizontalAlignment="Left"
                                                                VerticalAlignment="Center"
                                                                Margin="5,0,0,0"
                                                                Content="{TemplateBinding Content}"
                                                                TextBlock.Foreground="{TemplateBinding Foreground}"/>
                                                <Path Grid.Column="1"
                                                    HorizontalAlignment="Center"
                                                    VerticalAlignment="Center"
                                                    Data="M 0 0 L 4 4 L 8 0 Z"
                                                    Fill="{TemplateBinding Foreground}"/>
                                            </Grid>
                                        </Border>
                                    </ControlTemplate>
                                </ToggleButton.Template>
                            </ToggleButton>
                            <ContentPresenter x:Name="ContentSite"
                                            IsHitTestVisible="False"
                                            Content="{TemplateBinding SelectionBoxItem}"
                                            ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                            ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                            Margin="5,3,23,3"
                                            VerticalAlignment="Center"
                                            HorizontalAlignment="Left"
                                            TextBlock.Foreground="#FFFFFF"/>
                            <Popup x:Name="Popup"
                                 Placement="Bottom"
                                 IsOpen="{TemplateBinding IsDropDownOpen}"
                                 AllowsTransparency="True"
                                 Focusable="False"
                                 PopupAnimation="Slide">
                                <Grid MaxHeight="200"
                                    MinWidth="{TemplateBinding ActualWidth}">
                                    <Border Background="#2D2D30"
                                          BorderBrush="#3F3F46"
                                          BorderThickness="1">
                                        <ScrollViewer>
                                            <StackPanel IsItemsHost="True"
                                                      KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3F3F46"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="#2D2D30"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                        <Setter Property="Padding" Value="5,3"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#094771"/>
                            </Trigger>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="#007ACC"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <!-- 루트 그리드 -->
    <Grid Background="#1E1E1E">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 툴바 -->
            <RowDefinition Height="*"/>
            <!-- 메인 컨텐츠 -->
            <RowDefinition Height="Auto"/>
            <!-- 상태바 -->
        </Grid.RowDefinitions>

        <!-- 툴바 -->
        <Border Grid.Row="0" Background="#2D2D30" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid Height="40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 필터들 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                    <!-- 로그 레벨 필터 -->
                    <TextBlock Text="레벨:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <ComboBox x:Name="cmbLogLevel" 
                              Style="{StaticResource FilterComboBoxStyle}"/>

                    <!-- 모듈 필터 -->
                    <TextBlock Text="모듈:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="20,0,5,0"/>
                    <ComboBox x:Name="cmbModule" 
                              Style="{StaticResource FilterComboBoxStyle}"/>

                    <!-- 오늘만 보기 체크박스 -->
                    <CheckBox x:Name="chkOnlyToday" 
                              Content="오늘만" 
                              Foreground="#FFFFFF" 
                              VerticalAlignment="Center" 
                              Margin="20,0,0,0"/>

                    <!-- 실시간 업데이트 체크박스 -->
                    <CheckBox x:Name="chkRealTime" 
                              Content="실시간" 
                              IsChecked="True"
                              Foreground="#FFFFFF" 
                              VerticalAlignment="Center" 
                              Margin="10,0,0,0"/>
                </StackPanel>

                <!-- 가운데 검색 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="검색:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <TextBox x:Name="txtSearch" 
                             Width="300"
                             Height="24"
                             Background="#2D2D30" 
                             Foreground="#FFFFFF" 
                             BorderBrush="#3F3F46"
                             Padding="5,3"/>
                </StackPanel>

                <!-- 오른쪽 컨트롤들 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,10,0">
                    <!-- 내보내기 버튼 -->
                    <Button x:Name="btnExportLogs" 
                            Content="💾 내보내기" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#4CAF50" 
                            BorderBrush="#388E3C"/>

                    <!-- 로그 삭제 버튼 -->
                    <Button x:Name="btnClearLogs" 
                            Content="🗑️ 삭제" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#FF6B6B" 
                            BorderBrush="#E53935"/>

                    <!-- 새로고침 버튼 -->
                    <Button x:Name="btnRefresh" 
                            Content="🔄 새로고침" 
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#2196F3" 
                            BorderBrush="#1976D2"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 로그 목록 -->
            <Border Grid.Column="0" Background="#252526" BorderBrush="#3F3F46" BorderThickness="1">
                <DataGrid x:Name="dgLogEntries"
                          AutoGenerateColumns="False"
                          HeadersVisibility="Column"
                          GridLinesVisibility="None"
                          AlternatingRowBackground="#2D2D30"
                          Background="#1E1E1E"
                          Foreground="#FFFFFF"
                          BorderThickness="0"
                          RowHeaderWidth="0"
                          CanUserAddRows="False"
                          CanUserDeleteRows="False"
                          IsReadOnly="True">

                    <DataGrid.RowStyle>
                        <Style TargetType="DataGridRow">
                            <Setter Property="Background" Value="#252526"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#2D2D30"/>
                                </Trigger>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#094771"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.RowStyle>

                    <DataGrid.ColumnHeaderStyle>
                        <Style TargetType="DataGridColumnHeader">
                            <Setter Property="Background" Value="#007ACC"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Setter Property="BorderBrush" Value="#3F3F46"/>
                            <Setter Property="BorderThickness" Value="0,0,1,1"/>
                            <Setter Property="Padding" Value="8,5"/>
                            <Setter Property="FontWeight" Value="SemiBold"/>
                        </Style>
                    </DataGrid.ColumnHeaderStyle>

                    <DataGrid.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Padding" Value="5,3"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#FFFFFF"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="#094771"/>
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.CellStyle>

                    <DataGrid.Columns>
                        <DataGridTextColumn Header="시간" 
                                            Binding="{Binding TimeStampDisplay}" 
                                            Width="140" 
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="레벨" 
                                            Binding="{Binding Level}" 
                                            Width="70" 
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="모듈" 
                                            Binding="{Binding Module}" 
                                            Width="100" 
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="메서드" 
                                            Binding="{Binding Method}" 
                                            Width="100" 
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>

                        <DataGridTextColumn Header="메시지" 
                                            Binding="{Binding Message}" 
                                            Width="*" 
                                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="TextBlock">
                                    <Setter Property="Foreground" Value="#FFFFFF"/>
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Border>

            <!-- 구분선 -->
            <GridSplitter Grid.Column="1" 
                          Background="#3F3F46" 
                          HorizontalAlignment="Stretch"/>

            <!-- 상세 정보 패널 -->
            <Grid Grid.Column="2" Background="#252526">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 상세 정보 헤더 -->
                <Border Grid.Row="0" Background="#007ACC" Padding="10,8">
                    <TextBlock Text="📋 로그 상세 정보" 
                               Foreground="#FFFFFF" 
                               FontSize="14" 
                               FontWeight="SemiBold"/>
                </Border>

                <!-- 상세 정보 내용 -->
                <ScrollViewer Grid.Row="1" 
                              Background="#1E1E1E" 
                              VerticalScrollBarVisibility="Auto"
                              Padding="15,10">
                    <StackPanel>
                        <TextBlock x:Name="txtDetailTime" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtDetailLevel" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtDetailModule" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,10"/>
                        <TextBlock x:Name="txtDetailMethod" 
                                   Foreground="#FFFFFF" 
                                   FontWeight="SemiBold"
                                   Margin="0,0,0,15"/>
                        <TextBlock x:Name="txtDetailMessage" 
                                   Foreground="#FFFFFF" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"/>
                        <TextBlock x:Name="txtDetailException" 
                                   Foreground="#FF6B6B" 
                                   TextWrapping="Wrap" 
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- 통계 정보 -->
                <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="15,10">
                    <StackPanel>
                        <TextBlock x:Name="txtStats" 
                                   Text="통계: 로딩 중..." 
                                   FontSize="11" 
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 상태바 -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           x:Name="txtStatusMessage" 
                           Text="시스템 준비" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           x:Name="txtLogCount" 
                           Text="로그 수: 0" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center" 
                           Margin="20,0"/>

                <TextBlock Grid.Column="2" 
                           x:Name="txtLastUpdate" 
                           Text="마지막 업데이트: -" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>