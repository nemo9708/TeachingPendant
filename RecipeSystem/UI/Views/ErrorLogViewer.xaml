<UserControl x:Class="TeachingPendant.UI.Views.ErrorLogViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#1E1E1E"
             FontFamily="Segoe UI">

    <UserControl.Resources>
        <!-- 데이터그리드 스타일 -->
        <Style x:Key="LogDataGridStyle" TargetType="DataGrid">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#3F3F46"/>
            <Setter Property="HeadersVisibility" Value="Column"/>
            <Setter Property="CanUserAddRows" Value="False"/>
            <Setter Property="CanUserDeleteRows" Value="False"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="SelectionMode" Value="Single"/>
            <Setter Property="AutoGenerateColumns" Value="False"/>
            <Setter Property="AlternatingRowBackground" Value="#252526"/>
        </Style>

        <!-- 데이터그리드 헤더 스타일 -->
        <Style x:Key="DataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#333337"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
        </Style>

        <!-- 에러 행 스타일 -->
        <Style x:Key="ErrorRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Level}" Value="ERROR">
                    <Setter Property="Background" Value="#3C1E1E"/>
                    <Setter Property="Foreground" Value="#FF6B6B"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="WARNING">
                    <Setter Property="Foreground" Value="#FFD700"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="INFO">
                    <Setter Property="Foreground" Value="#4FC3F7"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Level}" Value="DEBUG">
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- 버튼 스타일 -->
        <Style x:Key="ToolbarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#005A9E"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="0,0,5,0"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#005A9E"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#004578"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 콤보박스 스타일 -->
        <Style x:Key="FilterComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Background" Value="#2D2D30"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#3F3F46"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Padding" Value="5,3"/>
        </Style>
    </UserControl.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- 툴바 -->
            <RowDefinition Height="*"/>
            <!-- 메인 컨텐츠 -->
            <RowDefinition Height="Auto"/>
            <!-- 상태바 -->
        </Grid.RowDefinitions>

        <!-- 툴바 -->
        <Border Grid.Row="0" Background="#333337" BorderBrush="#3F3F46" BorderThickness="0,0,0,1">
            <Grid Margin="10,8">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 왼쪽 컨트롤들 -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 새로고침 버튼 -->
                    <Button Name="btnRefresh" 
                            Content="🔄 새로고침" 
                            Click="btnRefresh_Click"
                            Style="{StaticResource ToolbarButtonStyle}"/>

                    <!-- 로그 레벨 필터 -->
                    <TextBlock Text="레벨:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="10,0,5,0"/>
                    <ComboBox Name="cmbLogLevel" 
                              Width="100"
                              SelectionChanged="cmbLogLevel_SelectionChanged"
                              Style="{StaticResource FilterComboBoxStyle}">
                        <ComboBoxItem Content="All" IsSelected="True"/>
                        <ComboBoxItem Content="ERROR"/>
                        <ComboBoxItem Content="WARNING"/>
                        <ComboBoxItem Content="INFO"/>
                        <ComboBoxItem Content="DEBUG"/>
                    </ComboBox>

                    <!-- 모듈 필터 -->
                    <TextBlock Text="모듈:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <ComboBox Name="cmbModule" 
                              Width="120"
                              SelectionChanged="cmbModule_SelectionChanged"
                              Style="{StaticResource FilterComboBoxStyle}"/>

                    <!-- 오늘만 보기 체크박스 -->
                    <CheckBox Name="chkOnlyToday" 
                              Content="오늘만" 
                              Foreground="#FFFFFF" 
                              VerticalAlignment="Center" 
                              Margin="10,0,0,0"/>

                    <!-- 실시간 업데이트 체크박스 -->
                    <CheckBox Name="chkRealTime" 
                              Content="실시간" 
                              IsChecked="True"
                              Foreground="#FFFFFF" 
                              VerticalAlignment="Center" 
                              Margin="10,0,0,0"/>
                </StackPanel>

                <!-- 가운데 검색 -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" 
                           HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="검색:" 
                               Foreground="#FFFFFF" 
                               VerticalAlignment="Center" 
                               Margin="0,0,5,0"/>
                    <TextBox Name="txtSearch" 
                             Width="300"
                             TextChanged="txtSearch_TextChanged"
                             Background="#2D2D30" 
                             Foreground="#FFFFFF" 
                             BorderBrush="#3F3F46"
                             Padding="5,3"/>
                </StackPanel>

                <!-- 오른쪽 컨트롤들 -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- 내보내기 버튼 -->
                    <Button Name="btnExportLogs" 
                            Content="💾 내보내기" 
                            Click="btnExportLogs_Click"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#4CAF50" 
                            BorderBrush="#388E3C"/>

                    <!-- 로그 삭제 버튼 -->
                    <Button Name="btnClearLogs" 
                            Content="🗑️ 모두 삭제" 
                            Click="btnClearLogs_Click"
                            Style="{StaticResource ToolbarButtonStyle}"
                            Background="#FF6B6B" 
                            BorderBrush="#E53935"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 메인 컨텐츠 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="5"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <!-- 로그 목록 -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- 로그 상태 -->
                <Border Grid.Row="0" Background="#333337" Padding="10,5">
                    <TextBlock Name="txtLogStatus" 
                               Text="로그 로딩 중..." 
                               Foreground="#FFFFFF" 
                               FontSize="12"/>
                </Border>

                <!-- 로그 DataGrid -->
                <DataGrid Grid.Row="1" 
                          Name="dgLogs"
                          Style="{StaticResource LogDataGridStyle}"
                          RowStyle="{StaticResource ErrorRowStyle}"
                          SelectionChanged="dgLogs_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="시간" 
                                            Binding="{Binding TimeStampDisplay}" 
                                            Width="100"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="레벨" 
                                            Binding="{Binding Level}" 
                                            Width="70"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="모듈" 
                                            Binding="{Binding Module}" 
                                            Width="120"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="메서드" 
                                            Binding="{Binding Method}" 
                                            Width="120"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                        <DataGridTextColumn Header="메시지" 
                                            Binding="{Binding Message}" 
                                            Width="*"
                                            HeaderStyle="{StaticResource DataGridColumnHeaderStyle}"/>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>

            <!-- 구분선 -->
            <GridSplitter Grid.Column="1" 
                          Background="#3F3F46" 
                          HorizontalAlignment="Stretch"/>

            <!-- 로그 상세 정보 -->
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- 상세 헤더 -->
                <Border Grid.Row="0" Background="#333337" Padding="15,10">
                    <TextBlock Text="로그 상세 정보" 
                               Foreground="#FFFFFF" 
                               FontWeight="Bold" 
                               FontSize="14"/>
                </Border>

                <!-- 상세 내용 -->
                <ScrollViewer Grid.Row="1" Background="#2D2D30" VerticalScrollBarVisibility="Auto">
                    <StackPanel Name="pnlLogDetails" Margin="15">
                        <TextBlock Name="txtDetailTime" 
                                   Foreground="#4FC3F7" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        <TextBlock Name="txtDetailLevel" 
                                   Foreground="#FFEB3B" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        <TextBlock Name="txtDetailModule" 
                                   Foreground="#4CAF50" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,10"
                                   TextWrapping="Wrap"/>
                        <TextBlock Name="txtDetailMethod" 
                                   Foreground="#FF9800" 
                                   FontWeight="Bold" 
                                   Margin="0,0,0,15"
                                   TextWrapping="Wrap"/>
                        <TextBlock Name="txtDetailMessage" 
                                   Foreground="#FFFFFF" 
                                   TextWrapping="Wrap" 
                                   Margin="0,0,0,15"/>
                        <TextBlock Name="txtDetailException" 
                                   Foreground="#FF6B6B" 
                                   TextWrapping="Wrap" 
                                   FontFamily="Consolas"
                                   FontSize="11"/>
                    </StackPanel>
                </ScrollViewer>

                <!-- 통계 정보 -->
                <Border Grid.Row="2" BorderBrush="#3F3F46" BorderThickness="0,1,0,0" Padding="15,10">
                    <StackPanel>
                        <TextBlock Name="txtStats" 
                                   Text="통계: 로딩 중..." 
                                   FontSize="11" 
                                   Foreground="#CCCCCC"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- 상태바 -->
        <Border Grid.Row="2" Background="#007ACC" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Name="txtStatusMessage" 
                           Text="시스템 준비" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>

                <TextBlock Grid.Column="1" 
                           Name="txtLogCount" 
                           Text="로그 수: 0" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center" 
                           Margin="20,0"/>

                <TextBlock Grid.Column="2" 
                           Name="txtLastUpdate" 
                           Text="마지막 업데이트: -" 
                           Foreground="#FFFFFF" 
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>