<UserControl x:Class="TeachingPendant.RecipeSystem.UI.Views.RecipeRunner"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="800" d:DesignWidth="1200">

    <UserControl.Resources>
        <!-- Recipe execution status color definitions -->
        <SolidColorBrush x:Key="IdleBrush" Color="#95A5A6"/>
        <SolidColorBrush x:Key="RunningBrush" Color="#3498DB"/>
        <SolidColorBrush x:Key="PausedBrush" Color="#F39C12"/>
        <SolidColorBrush x:Key="CompletedBrush" Color="#27AE60"/>
        <SolidColorBrush x:Key="ErrorBrush" Color="#E74C3C"/>
        <SolidColorBrush x:Key="StoppingBrush" Color="#8E44AD"/>

        <!-- Step status styles -->
        <Style x:Key="StepItemStyle" TargetType="ListBoxItem">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="BorderBrush" Value="#BDC3C7"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border Name="ItemBorder" 
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="5">
                            <ContentPresenter Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <!-- Currently executing step highlight -->
                            <DataTrigger Binding="{Binding IsCurrentStep}" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E8F4FD"/>
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#3498DB"/>
                                <Setter TargetName="ItemBorder" Property="BorderThickness" Value="3"/>
                            </DataTrigger>
                            <!-- Completed step style -->
                            <DataTrigger Binding="{Binding IsCompleted}" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#D5EADB"/>
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#27AE60"/>
                            </DataTrigger>
                            <!-- Error step style -->
                            <DataTrigger Binding="{Binding HasError}" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FDEAEA"/>
                                <Setter TargetName="ItemBorder" Property="BorderBrush" Value="#E74C3C"/>
                            </DataTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Control button style -->
        <Style x:Key="ControlButtonStyle" TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Name="ButtonBorder" 
                                Background="{TemplateBinding Background}"
                                CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.8"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.6"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="ButtonBorder" Property="Opacity" Value="0.4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F8F9FA">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Header -->
            <RowDefinition Height="Auto"/>
            <!-- Control Panel -->
            <RowDefinition Height="*"/>
            <!-- Main Content -->
            <RowDefinition Height="200"/>
            <!-- Log Area -->
        </Grid.RowDefinitions>

        <!-- Header Area -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical">
                    <TextBlock Text="Recipe Runner" 
                             FontSize="20" FontWeight="Bold" 
                             Foreground="White"/>
                    <TextBlock Name="txtRecipeName" 
                             Text="No Recipe Selected"
                             FontSize="14" 
                             Foreground="#BDC3C7" 
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Execution Status Display -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <Ellipse Name="statusIndicator" 
                           Width="15" Height="15" 
                           Fill="{StaticResource IdleBrush}" 
                           Margin="0,0,10,0"/>
                    <TextBlock Name="txtExecutionStatus" 
                             Text="Idle"
                             FontSize="14" FontWeight="Bold" 
                             Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="White" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1" Padding="20,15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Progress Display -->
                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                 Text="Execution Progress" 
                                 FontSize="12" 
                                 Foreground="#7F8C8D" 
                                 Margin="0,0,0,5"/>
                        <TextBlock Grid.Column="1" 
                                 Name="txtProgressText"
                                 Text="0 / 0 (0%)" 
                                 FontSize="12" FontWeight="Bold" 
                                 Foreground="#2C3E50"/>
                    </Grid>

                    <ProgressBar Name="progressBar" 
                               Height="20" 
                               Background="#ECF0F1" 
                               Foreground="#3498DB"
                               BorderThickness="1"
                               BorderBrush="#BDC3C7"/>

                    <Grid Margin="0,5,0,0">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                 Name="txtElapsedTime"
                                 Text="Elapsed Time: 00:00:00" 
                                 FontSize="11" 
                                 Foreground="#7F8C8D"/>
                        <TextBlock Grid.Column="1" 
                                 Name="txtEstimatedTime"
                                 Text="ETA: --:--:--" 
                                 FontSize="11" 
                                 Foreground="#7F8C8D"/>
                    </Grid>
                </StackPanel>

                <!-- Execution Control Buttons -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="20,0,0,0">
                    <Button Name="btnStartExecution" 
                          Content="▶ Start" 
                          Background="#27AE60" 
                          Foreground="White"
                          Style="{StaticResource ControlButtonStyle}"
                          Click="btnStartExecution_Click"/>

                    <Button Name="btnPauseExecution" 
                          Content="⏸ Pause" 
                          Background="#F39C12" 
                          Foreground="White"
                          Style="{StaticResource ControlButtonStyle}"
                          IsEnabled="False"
                          Click="btnPauseExecution_Click"/>

                    <Button Name="btnStopExecution" 
                          Content="⏹ Stop" 
                          Background="#E74C3C" 
                          Foreground="White"
                          Style="{StaticResource ControlButtonStyle}"
                          IsEnabled="False"
                          Click="btnStopExecution_Click"/>
                </StackPanel>

                <!-- Recipe Selection Button -->
                <Button Grid.Column="2" 
                      Name="btnSelectRecipe" 
                      Content="📋 Select Recipe" 
                      Background="#3498DB" 
                      Foreground="White"
                      Style="{StaticResource ControlButtonStyle}"
                      Margin="10,0,0,0"
                      Click="btnSelectRecipe_Click"/>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <!-- Step List -->
                <ColumnDefinition Width="10"/>
                <!-- Separator -->
                <ColumnDefinition Width="*"/>
                <!-- Execution Info -->
            </Grid.ColumnDefinitions>

            <!-- Step List Area -->
            <Border Grid.Column="0" Background="White" BorderBrush="#E1E8ED" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Step List Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1" Padding="15,10">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock Grid.Column="0" 
                                     Text="Recipe Step List" 
                                     FontSize="16" FontWeight="Bold" 
                                     Foreground="#2C3E50"/>
                            <TextBlock Grid.Column="1" 
                                     Name="txtStepCount"
                                     Text="Total 0 Steps" 
                                     FontSize="12" 
                                     Foreground="#7F8C8D" 
                                     VerticalAlignment="Center"/>
                        </Grid>
                    </Border>

                    <!-- Step List -->
                    <ListBox Grid.Row="1" 
                           Name="lstSteps" 
                           ItemContainerStyle="{StaticResource StepItemStyle}"
                           ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                           BorderThickness="0"
                           Background="Transparent"
                           Margin="10">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Step Number -->
                                    <Border Grid.Column="0" 
                                          Background="#3498DB" 
                                          CornerRadius="12" 
                                          Width="24" Height="24" 
                                          Margin="0,0,10,0">
                                        <TextBlock Text="{Binding StepNumber}" 
                                                 HorizontalAlignment="Center" 
                                                 VerticalAlignment="Center" 
                                                 FontSize="10" FontWeight="Bold" 
                                                 Foreground="White"/>
                                    </Border>

                                    <!-- Step Type Icon -->
                                    <TextBlock Grid.Column="1" 
                                             Text="{Binding StepTypeIcon}" 
                                             FontSize="16" 
                                             Margin="0,0,10,0" 
                                             VerticalAlignment="Center"/>

                                    <!-- Step Description -->
                                    <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Step.Description}" 
                                                 FontSize="13" FontWeight="Bold" 
                                                 Foreground="#2C3E50"/>
                                        <TextBlock Text="{Binding StepTypeDisplayName}" 
                                                 FontSize="11" 
                                                 Foreground="#7F8C8D" 
                                                 Margin="0,2,0,0"/>
                                    </StackPanel>

                                    <!-- Execution Time -->
                                    <TextBlock Grid.Column="3" 
                                             Name="txtExecutionTime"
                                             Text="{Binding ExecutionTimeText}" 
                                             FontSize="11" 
                                             Foreground="#7F8C8D" 
                                             VerticalAlignment="Center" 
                                             Margin="10,0"/>

                                    <!-- Status Icon -->
                                    <TextBlock Grid.Column="4" 
                                             Text="{Binding StatusIcon}" 
                                             FontSize="16" 
                                             VerticalAlignment="Center"/>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Separator -->
            <GridSplitter Grid.Column="1" 
                        Width="2" 
                        Background="#E1E8ED" 
                        HorizontalAlignment="Center" 
                        VerticalAlignment="Stretch"/>

            <!-- Execution Info Area -->
            <Border Grid.Column="2" Background="White" BorderBrush="#E1E8ED" BorderThickness="1" CornerRadius="5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Execution Info Header -->
                    <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1" Padding="15,10">
                        <TextBlock Text="Execution Info" 
                                 FontSize="16" FontWeight="Bold" 
                                 Foreground="#2C3E50"/>
                    </Border>

                    <!-- Execution Info Content -->
                    <ScrollViewer Grid.Row="1" Margin="15" VerticalScrollBarVisibility="Auto">
                        <StackPanel>
                            <!-- Current Step Info -->
                            <Border Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                <StackPanel>
                                    <TextBlock Text="Current Executing Step" 
                                             FontSize="12" FontWeight="Bold" 
                                             Foreground="#2C3E50" 
                                             Margin="0,0,0,5"/>
                                    <TextBlock Name="txtCurrentStepInfo" 
                                             Text="No step is currently executing"
                                             FontSize="11" 
                                             Foreground="#7F8C8D" 
                                             TextWrapping="Wrap"/>
                                </StackPanel>
                            </Border>

                            <!-- Execution Statistics -->
                            <Border Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="1" CornerRadius="5" Padding="10" Margin="0,0,0,10">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Row="0" Grid.ColumnSpan="2" 
                                             Text="Execution Statistics" 
                                             FontSize="12" FontWeight="Bold" 
                                             Foreground="#2C3E50" 
                                             Margin="0,0,0,8"/>

                                    <TextBlock Grid.Row="1" Grid.Column="0" Text="Completed Steps:" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Grid.Row="1" Grid.Column="1" Name="txtCompletedSteps" Text="0" FontSize="11" FontWeight="Bold" Foreground="#27AE60"/>

                                    <TextBlock Grid.Row="2" Grid.Column="0" Text="Errors Occurred:" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Grid.Row="2" Grid.Column="1" Name="txtErrorCount" Text="0" FontSize="11" FontWeight="Bold" Foreground="#E74C3C"/>

                                    <TextBlock Grid.Row="3" Grid.Column="0" Text="Success Rate:" FontSize="11" Foreground="#7F8C8D"/>
                                    <TextBlock Grid.Row="3" Grid.Column="1" Name="txtSuccessRate" Text="100%" FontSize="11" FontWeight="Bold" Foreground="#3498DB"/>
                                </Grid>
                            </Border>

                            <!-- Safety Status -->
                            <Border Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="1" CornerRadius="5" Padding="10">
                                <StackPanel>
                                    <TextBlock Text="System Safety Status" 
                                             FontSize="12" FontWeight="Bold" 
                                             Foreground="#2C3E50" 
                                             Margin="0,0,0,5"/>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <Ellipse Grid.Column="0" 
                                               Name="safetyIndicator" 
                                               Width="12" Height="12" 
                                               Fill="#27AE60" 
                                               Margin="0,0,8,0"/>
                                        <TextBlock Grid.Column="1" 
                                                 Name="txtSafetyStatus" 
                                                 Text="Safety Status Good"
                                                 FontSize="11" 
                                                 Foreground="#7F8C8D"/>
                                    </Grid>
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Emergency Stop Button -->
                    <Button Grid.Row="2" 
                          Name="btnEmergencyStop" 
                          Content="🚨 EMERGENCY STOP" 
                          Background="#C0392B" 
                          Foreground="White" 
                          FontSize="14" FontWeight="Bold" 
                          Padding="15,10" 
                          Margin="15" 
                          Style="{StaticResource ControlButtonStyle}"
                          Click="btnEmergencyStop_Click"/>
                </Grid>
            </Border>
        </Grid>

        <!-- Log Area -->
        <Border Grid.Row="3" Background="White" BorderBrush="#E1E8ED" BorderThickness="1,1,1,0" Margin="20,0,20,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Log Header -->
                <Border Grid.Row="0" Background="#F8F9FA" BorderBrush="#E1E8ED" BorderThickness="0,0,0,1" Padding="15,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" 
                                 Text="Execution Log" 
                                 FontSize="14" FontWeight="Bold" 
                                 Foreground="#2C3E50"/>
                        <Button Grid.Column="1" 
                              Name="btnClearLog" 
                              Content="Clear Log" 
                              Background="Transparent" 
                              Foreground="#7F8C8D" 
                              BorderThickness="1" 
                              BorderBrush="#BDC3C7" 
                              Padding="8,4" 
                              FontSize="11"
                              Click="btnClearLog_Click"/>
                    </Grid>
                </Border>

                <!-- Log Content -->
                <TextBox Grid.Row="1" 
                       Name="txtExecutionLog" 
                       IsReadOnly="True" 
                       BorderThickness="0" 
                       Background="Transparent" 
                       FontFamily="Consolas" 
                       FontSize="11" 
                       Foreground="#2C3E50" 
                       Padding="15,10" 
                       VerticalScrollBarVisibility="Auto" 
                       HorizontalScrollBarVisibility="Auto" 
                       TextWrapping="NoWrap"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>