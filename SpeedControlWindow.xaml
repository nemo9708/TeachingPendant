<Window x:Class="TeachingPendant.SpeedControlWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Speed Control" 
        Width="400" Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="LightGray"
        BorderBrush="Black" BorderThickness="2">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 제목 -->
        <TextBlock Grid.Row="0" Text="Robot Speed Control" 
                   FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" 
                   Margin="0,0,0,20"/>

        <!-- 슬라이더 영역 -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- 슬라이더 -->
            <Slider x:Name="speedSlider" 
                    Grid.Column="0"
                    Minimum="1" Maximum="200" 
                    Value="100"
                    TickFrequency="10"
                    TickPlacement="BottomRight"
                    IsSnapToTickEnabled="True"
                    VerticalAlignment="Center"
                    Margin="0,0,15,0"
                    ValueChanged="SpeedSlider_ValueChanged"/>

            <!-- 퍼센트 표시 -->
            <StackPanel Grid.Column="1" VerticalAlignment="Center" Orientation="Horizontal">
                <TextBox x:Name="txtSpeedValue" 
                         Text="100" 
                         Width="60" 
                         Height="30"
                         TextAlignment="Center"
                         VerticalContentAlignment="Center"
                         FontSize="14" FontWeight="Bold"
                         TextChanged="TxtSpeedValue_TextChanged"
                         Margin="0,0,5,0"/>
                <TextBlock Text="%" 
                           VerticalAlignment="Center" 
                           FontSize="14" FontWeight="Bold"/>
            </StackPanel>
        </Grid>

        <!-- 범위 표시 -->
        <Grid Grid.Row="2" Margin="0,10,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0" Text="1%" HorizontalAlignment="Left" FontSize="10" Foreground="Gray"/>
            <TextBlock Grid.Column="1" Text="100%" HorizontalAlignment="Center" FontSize="10" Foreground="Gray"/>
            <TextBlock Grid.Column="2" Text="200%" HorizontalAlignment="Right" FontSize="10" Foreground="Gray"/>
        </Grid>

        <!-- 버튼 영역 -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button Grid.Column="0" Content="Reset" 
                    Height="30" Margin="0,0,5,-15"
                    Click="ResetButton_Click"
                    BorderBrush="Gray" BorderThickness="1"/>

            <Button Grid.Column="1" Content="Apply" 
                    Height="30" Margin="5,0,5,-15"
                    Click="ApplyButton_Click"
                    BorderBrush="Gray" BorderThickness="1"
                    Background="LightBlue"/>

            <Button Grid.Column="2" Content="Close" 
                    Height="30" Margin="5,0,0,-15"
                    Click="CloseButton_Click"
                    BorderBrush="Gray" BorderThickness="1"/>
        </Grid>
    </Grid>
</Window>
