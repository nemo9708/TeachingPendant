<Window x:Class="TeachingPendant.SpeedParameterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Speed Parameters" Height="300" Width="350" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" ShowInTaskbar="False">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" MinWidth="100"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Text="Set Speed Parameters" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,10"/>

        <Label Grid.Row="2" Grid.Column="0" Content="Acceleration (a):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtAcceleration" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,5" Padding="5" BorderThickness="1" BorderBrush="Gray"/>

        <Label Grid.Row="5" Grid.Column="0" Content="Deceleration (b):" VerticalAlignment="Center"/>
        <TextBox x:Name="txtDeceleration" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="0,0,0,5" Padding="5" BorderThickness="1" BorderBrush="Gray"/>

        <StackPanel Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
            <Button Content="Apply" Width="75" Margin="0,0,10,0" Padding="5" Click="ApplyButton_Click"/>
            <Button Content="Reset" Width="75" Margin="0,0,10,0" Padding="5" Click="ResetButton_Click"/>
            <Button Content="Close" Width="75" Padding="5" Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
